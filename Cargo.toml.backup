[package]
name = "lectern"
version = "0.1.0"
edition = "2021"

[[bin]]
name = "lectern"
path = "src/main.rs"

[dependencies]
# Qt/QML UI Stack
qmetaobject = "0.2"
cpp = "0.5"
qt6 = { version = "0.4", features = ["widgets", "gui", "quick", "qml"] }

# Async & Networking
tokio = { version = "1.32", features = ["full", "fs", "process", "io-util"] }
reqwest = { version = "0.11", features = ["json", "multipart"] }
futures-util = "0.3.28"

# Serialization & Metadata
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
audiotags = "0.5.0"

# URL Encoding & utilities
urlencoding = "2.1"
dirs = "5.0"

[dev-dependencies]
# For easier debugging of API responses
pretty_assertions = "1.4.0"
